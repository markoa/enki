<% form_tag '/send_mail', :id => 'contactForm' do %>
  <p>
    <%= label_tag 'email' %> <br />
    <%= text_field_tag 'email', '', :size => 32 %>
  </p>

  <p>
    <%= label_tag 'subject' %> <br />
    <%= text_field_tag 'subject', '', :size => 32 %>
  </p>

  <p>
    <%= label_tag 'message' %> <br />
    <%= text_area_tag 'message', '', :size => '32x8' %>
  </p>

  <%= submit_tag "Send", :id => 'submit' %>
<% end %>
